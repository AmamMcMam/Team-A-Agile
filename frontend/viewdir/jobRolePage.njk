{% extends "template.njk" %}

{% block content %}
    <div class="container">
        <h3 id="roleName" style="color:#575756">{{role.roleName}}</h3>

        <div class="row">
            <h6>
                <div class="col">Date Posted: {{specification.datePosted}}</div>
                <div class="col">{{specification.hours}}</div>
                <div class="col">{{specification.location}}</div>
            </h6>
        </div>

        <div class="divider"></div>

        <h5><span style="color:#41679f">Band Level: </span><span id="bandName" style="color:#575756">{{band.bandName}}</span></h5>

        <div class="description">
            <div class="divider"></div>
            <div class="section">
                <h5><span style="color:#41679f">Role Description </span></h5>
                <p id="description">{{specification.roleDesc}}</p>
            </div>
        </div>
    </div>
{% endblock %}