{% extends "template.njk" %}

{% block content %}
    <div class="container">
        <h5 style="color:#575756"><span id="resultsHeader">{{items.length}}</span> results</span></h5>
        <div class="divider"></div>
        {% for item in items %}
            <div class="section">
                <h5 id="roleName" style="color:#009fe3"><a href="/job-roles/{{item.roleID}}">{{item.roleName}}</a></h5>
                <p id="roleInfo" style="color:#575756">{{item.location}} | {{item.datePosted}}</p>
            </div>
        {% endfor %}
    </div>
{% endblock %}