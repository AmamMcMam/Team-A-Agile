{% extends "template.njk" %}

{% block content %}
    <div class="container">
        <h5 style="color:#575756">{{items.length}} results</span></h5>
        <div class="divider"></div>
        {% for item in items %}
            <div class="section">
                <h5 style="color:#009fe3"><a href="/{{item.roleID}}">{{item.roleName}}</a></h5>
                <p style="color:#575756">{{item.location}} | {{item.datePosted}}</p>
            </div>
        {% endfor %}
    </div>
{% endblock %}